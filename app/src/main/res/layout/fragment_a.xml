<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/bg"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FragmentA"
                android:layout_marginBottom="20dp"
                android:textSize="36dp"/>

        <Button
                android:id="@+id/a_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start a Fragment form this page"
                android:padding="10dp"/>
        <Button
                android:id="@+id/a_btn_new_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start a Fragment by new task"
                android:padding="10dp"/>

        <Button
                android:id="@+id/a_btn_new_linkage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start a LinkageFragment"
                android:padding="10dp"/>
        <Button
                android:id="@+id/a_btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="finish current fragment"
                android:padding="10dp"/>


    </LinearLayout>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"/>
</FrameLayout>